{
  "compilerOptions": {
    // Environment: Browser, modern JS
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",

    // Bundler configuration
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "noEmit": false,
    "outDir": "./dist",

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "verbatimModuleSyntax": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}